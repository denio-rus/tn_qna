<% if alert %>
  $('.messages').html('<p class="alert"><%= alert %></p>');
<% end %>

<% if notice %>
  $('.messages').html('<p class="notice"><%= notice %></p>');
<% end %>

$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if !@answer.errors.present? %>
  $('.answer-<%= @answer.id %>').html('<%= j render @answer %>');
<% end %>
